# Network Configuration
STATIC_IP=192.168.1.100
GATEWAY=192.168.1.1
NETMASK=255.255.255.0
NETWORK_INTERFACE=eth0

# DNS Configuration - Australian Optimized
DNS_UPSTREAM_1=1.1.1.1  # Cloudflare Sydney PoP
DNS_UPSTREAM_2=9.9.9.9  # Quad9 Australia-friendly
DNS_UPSTREAM_3=8.8.8.8  # Google Sydney PoP
DNS_UPSTREAM_DOH_1=https://1.1.1.1/dns-query
DNS_UPSTREAM_DOH_2=https://dns.quad9.net/dns-query
DNS_UPSTREAM_DOH_3=https://dns.google/dns-query

# System Configuration
TZ=Australia/Sydney
HOSTNAME=adguard-dns
DOMAIN=home.local

# Security Configuration
SSH_PORT=2222
SSH_USER=adguard
ADMIN_EMAIL=your-email@example.com

# AdGuard Home Configuration
ADGUARD_USERNAME=admin
ADGUARD_PASSWORD=change_this_password
ADGUARD_WEB_PORT=3000
ADGUARD_DNS_PORT=53

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password
NODE_EXPORTER_PORT=9100
ADGUARD_EXPORTER_PORT=9617

# Alert Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_TO=your-email@gmail.com

# Telegram Alerts (optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Backup Configuration
BACKUP_LOCATION=/opt/backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=generate_with_openssl_rand

# Security Monitoring
FAIL2BAN_BANTIME=3600
FAIL2BAN_FINDTIME=600
FAIL2BAN_MAXRETRY=5

# Container Resources
ADGUARD_MEMORY_LIMIT=512m
PROMETHEUS_MEMORY_LIMIT=1g
GRAFANA_MEMORY_LIMIT=256m